<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:id="@+id/ack"
    android:background="#dfeaf1">

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Spotify Streamer"
        android:id="@+id/button1"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:background="#F08C35"
        android:clickable="true"
        android:onClick="@string/app_name" />

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Scores App"
        android:id="@+id/button2"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:background="#F08C35"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Library App"
        android:id="@+id/button3"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="5dp"
        android:background="#F08C35" />

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Build It Bigger"
        android:id="@+id/button4"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="#F08C35"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="XYZ Reader"
        android:id="@+id/button5"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="#F08C35"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Capstone: My Own App"
        android:id="@+id/button6"
        android:layout_marginBottom="100dp"
        android:background="#cd103f"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
